<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg">
  <form action="/tasks/edit/{{links.id}}" method="POST" class="mt-4">
    <div>
      <input type="text" name="title" value="{{links.title}}" placeholder="Title" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
    </div>
    <div>
      <input type="text" name="task" value="{{links.task}}" placeholder="Name task" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200    focus:bg-white" required>
    </div>
    <div>
      <textarea name="description" rows="2" placeholder="Description" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required >{{links.description}}</textarea>
    </div>
    <div>
      <button type="submit" class="rounded-mb bg-purple-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-purple-600 focus:bg-purple-700">Send</button>
    </div>
  </form>
</div> 